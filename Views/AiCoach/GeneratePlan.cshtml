@model SuiviEntrainementSportif.Models.PlanRequestViewModel
@{
    ViewData["Title"] = "Request AI Plan";
}
<div class="container py-4">
    <h2>Request a Personalized Plan</h2>
    <form id="planForm" asp-action="Generate" method="post">
        <div class="tab-content">
            <div class="tab-pane active" id="step1">
                <h5>Basic Info</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Age <span id="ageVal">@Model.Age</span></label>
                        <input asp-for="Age" type="range" min="10" max="100" class="form-range" oninput="document.getElementById('ageVal').innerText = this.value" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Height (cm) <span id="heightVal">@Model.HeightCm</span></label>
                        <input asp-for="HeightCm" type="range" min="100" max="250" class="form-range" oninput="document.getElementById('heightVal').innerText = this.value" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Weight (kg) <span id="weightVal">@Model.WeightKg</span></label>
                        <input asp-for="WeightKg" type="range" min="30" max="300" class="form-range" oninput="document.getElementById('weightVal').innerText = this.value" />
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Gender" class="form-label">Gender</label>
                    <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<SuiviEntrainementSportif.Models.GenderEnum>()"></select>
                </div>
                <div class="mt-3">
                    <button type="button" class="btn btn-primary" onclick="showStep(2)">Next</button>
                </div>
            </div>

            <div class="tab-pane" id="step2">
                <h5>Fitness & Goals</h5>
                <div class="mb-3">
                    <label asp-for="Level" class="form-label">Fitness Level</label>
                    <select asp-for="Level" class="form-select" asp-items="Html.GetEnumSelectList<SuiviEntrainementSportif.Models.FitnessLevel>()"></select>
                </div>
                <div class="mb-3">
                    <label class="form-label">Goals</label>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Goals" value="LoseWeight" /> <label class="form-check-label">Lose Weight</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Goals" value="GainMuscle" /> <label class="form-check-label">Gain Muscle</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Goals" value="Maintain" /> <label class="form-check-label">Maintain</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="DaysPerWeek" class="form-label">Days per week</label>
                    <input asp-for="DaysPerWeek" type="number" class="form-control" min="1" max="7" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Select weekdays (optional)</label>
                    <div class="d-flex flex-wrap gap-2">
                        @{ var sel = Model?.SelectedWeekDays ?? new List<int>(); }
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="0" @(sel.Contains(0) ? "checked" : "") /> <label class="form-check-label">Sun</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="1" @(sel.Contains(1) ? "checked" : "") /> <label class="form-check-label">Mon</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="2" @(sel.Contains(2) ? "checked" : "") /> <label class="form-check-label">Tue</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="3" @(sel.Contains(3) ? "checked" : "") /> <label class="form-check-label">Wed</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="4" @(sel.Contains(4) ? "checked" : "") /> <label class="form-check-label">Thu</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="5" @(sel.Contains(5) ? "checked" : "") /> <label class="form-check-label">Fri</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="SelectedWeekDays" value="6" @(sel.Contains(6) ? "checked" : "") /> <label class="form-check-label">Sat</label>
                        </div>
                    </div>
                </div>

                <div>
                    <button type="button" class="btn btn-secondary me-2" onclick="showStep(1)">Back</button>
                    <button type="submit" class="btn btn-primary">Generate Plan</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function showStep(n) {
        document.querySelectorAll('.tab-pane').forEach(p => p.classList.remove('active'));
        document.getElementById('step' + n).classList.add('active');
    }
</script>
