@model SuiviEntrainementSportif.Models.ObjectifSportif

<h2>Ajouter un objectif sportif</h2>

<form asp-action="Ajouter" method="post">
    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label>Calories cible</label>
        <input asp-for="CaloriesCible" class="form-control" />
    </div>

    <div class="form-group">
        <label>Durée cible (minutes)</label>
        <input asp-for="DureeCible" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-2">Enregistrer</button>
</form>
