@model List<SuiviEntrainementSportif.Models.ObjectifSportif>

<h2>Objectifs sportifs</h2>

<a href="/Objectif/Create" class="btn btn-success mb-3">Ajouter</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Description</th>
            <th>Calories cible</th>
            <th>Durée cible (min)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description</td>
                <td>@item.CaloriesCible</td>
                <td>@item.DureeCible</td>

                <td>
                    <a href="/Objectif/Edit/@item.Id" class="btn btn-warning btn-sm">Modifier</a>
                    <a href="/Objectif/Delete/@item.Id" class="btn btn-danger btn-sm">Supprimer</a>
                </td>
            </tr>
        }
    </tbody>
</table>
